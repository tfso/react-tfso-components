{
    "compileOnSave": true,
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "es2018",
        "dom",
        "esnext.asynciterable"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "noEmit": true,
      "jsx": "preserve",
      "noImplicitAny": false,
      "isolatedModules": true,
      "typeRoots": [
        "./node_modules/@types"
      ]
    },
    "include": [
      "src"
    ]
  }
  